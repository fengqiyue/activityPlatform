<!DOCTYPE html>
<html>
  <head>
    <title>Input</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1" />
    <link rel='stylesheet' href='/stylesheets/ionic.min.css' />
    <link rel='stylesheet' href='/stylesheets/barrage.css' />
    <link href="http://cdn.lydiabox.com/reviewp/semantic.min.css" rel="stylesheet">
    <link href="http://cdn.lydiabox.com/reviewp/static/app.css" rel="stylesheet">
    <script src="bower_components/jquery/dist/jquery.min.js"></script>
  </head>

  <body>
    <div class="box">
      <div class="bar bar-header bar-dark" id="header">
        <h1 class="title">投票</h1>
        <button class="button button-clear button-positive" onclick="location='./homepage'">返回</button>
    </div>
    <div class="ui bottom attached segment">
      <table class="ui celled table">
        <thead class="center aligned">
          <tr>
            <th>投票</th>
            <th>节目名</th>
            <th>表演者</th>
            <th>描述</th>
          </tr>
        </thead>
        <% programs.forEach(function (program, index) { %>
        <tr class="center aligned">
        <td>
        <form id ="votecheckbox">
          <input type="checkbox" name="avote" value="winvote" /> 
        </form>
        </td>
        <td><%= program.name %></td>
        <td><%= program.player %></td>
        <td><%= program.description %></td>
        
        <% }) %>
      </table>
    </div>

    </div>  
  </body>
</html>